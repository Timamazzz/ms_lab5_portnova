<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.bstu.it191.portnova.lab5.HelloController">
    <SplitPane dividerPositions="0.35" prefHeight="300" prefWidth="600">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="300.0" prefWidth="200.0">
            <ListView fx:id="listView" onMouseClicked="#onCarClick" prefHeight="300.0" prefWidth="206.0" />
        </AnchorPane>

        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="498.0" prefWidth="605.0">
            <Label fx:id="idLabel" layoutX="157.0" layoutY="14.0" text="Country Id: ###" />

            <Label layoutX="49.0" layoutY="57.0" text="name:" />
            <TextField fx:id="modelTextField" layoutX="124.0" layoutY="52.0" promptText="name" />
            <Button fx:id="addButton" layoutX="284.0" layoutY="52.0" mnemonicParsing="false" onAction="#onAddButtonClick" text="Add" />

            <Label layoutX="49.0" layoutY="87.0" text="continent:" />
            <TextField fx:id="colorTextField" layoutX="124.0" layoutY="82.0" promptText="continent" />
            <Button fx:id="deleteButton" layoutX="284.0" layoutY="82.0" mnemonicParsing="false" onAction="#deleteButtonClick" text="Delete" />

            <Label layoutX="49.0" layoutY="117.0" text="area:" />
            <TextField fx:id="numberTextField" layoutX="124.0" layoutY="112.0" promptText="area" />
            <Button fx:id="redactButton" layoutX="284.0" layoutY="112.0" mnemonicParsing="false" onAction="#redactButtonClick" text="Redact" />

            <Label layoutX="49.0" layoutY="147.0" text="population:" />
            <TextField fx:id="nameTextField" layoutX="124.0" layoutY="143.0" promptText="population" />
            <Button fx:id="filterButton" layoutX="284.0" layoutY="142.0" mnemonicParsing="false" onAction="#filterButtonClick" text="Filter" />

            <Label layoutX="49.0" layoutY="177.0" text="capital:" />
            <TextField fx:id="surnameTextField" layoutX="124.0" layoutY="172.0" promptText="capital" />
            <Button fx:id="modeButton" layoutX="284.0" layoutY="260.0" mnemonicParsing="false" onAction="#changeModeClick" prefWidth="100.0" text="Xml mode" />

            <Button fx:id="convertButton" layoutX="49.0" layoutY="260.0" mnemonicParsing="false" onAction="#ConvertButtonClick" prefWidth="150.0" text="Write all to the database" />
        </AnchorPane>
    </SplitPane>
</Pane>

